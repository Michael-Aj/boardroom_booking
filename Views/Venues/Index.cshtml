@model IEnumerable<Venue>
@{
    ViewData["Title"] = "Venues";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> New Venue</a>
</div>

<table class="table table-striped align-middle">
    <thead><tr><th>Name</th><th>Capacity</th><th>Location</th><th></th></tr></thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>@v.Capacity</td>
                <td>@v.Location</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
