@model Booking
@{
    ViewData["Title"] = "New Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="card card-body p-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VenueId" class="form-label"></label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-select"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col">
            <label asp-for="StartUtc" class="form-label"></label>
            <input asp-for="StartUtc" type="datetime-local" class="form-control" />
            <span asp-validation-for="StartUtc" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="EndUtc" class="form-label"></label>
            <input asp-for="EndUtc" type="datetime-local" class="form-control" />
            <span asp-validation-for="EndUtc" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-link mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
