@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Bookings";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> New Booking</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr><th>Title</th><th>Room</th><th>Start</th><th>End</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Venue?.Name</td>
                <td>@b.StartUtc.ToLocalTime():g</td>
                <td>@b.EndUtc.ToLocalTime():g</td>
                <td class="text-end">
                    <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
